{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": [
      "node_modules/",
      "build/",
      "./packages/site/functions/",
      "./packages/site/public/",
      "./packages/site/app/util/highlights.json",
      "./persistence/",
      ".wrangler/"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noUselessElse": "off",
        "useImportType": {
          "fix": "safe",
          "level": "info"
        }
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      },
      "complexity": {
        "noBannedTypes": "off"
      },
      "correctness": {
        "useHookAtTopLevel": "error"
      }
    }
  },
  "formatter": {
    "ignore": [
      "./packages/site/public/help/",
      "./packages/site/app/i18n/",
      "./packages/bot/src/i18n/"
    ],
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "indentStyle": "space"
    }
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    },
    "formatter": {
      "indentStyle": "space"
    }
  }
}
